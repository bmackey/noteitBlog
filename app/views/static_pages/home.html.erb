<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to NoteIt!</h1>

    <h2>
    Microblog Service for the WIT Department of Computing, Maths and Physics Student Fair
    </h2>
    <p><%= link_to image_tag("icon.png", alt: "XpoIt!")%></p>
    <%= link_to "Sign up now!", signup_path,class: "btn btn-large btn-primary" %>
      
  </div>
<% end %>